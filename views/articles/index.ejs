<html>
    <head>
        <title>Anonym.</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    
    </head>
    <body>
        <div class = "container">
            <h1 class = "mb-4">Anonym Blog</h1>
            <a href="articles/new" class= "btn btn-dark">Write a New Anonym Blog</a>
            <% articles.forEach((articles, i)=> { %>
                <div class="card mt-4">
                    <div class="card-body">
                        <h4 class="card-title"><%= articles.title %> </h4>
                    </div>
                    <div class="card-text mb-2 ml-4"><%= articles.description %></div>
                <div>
                    <a class="btn btn-primary" href="articles/<%= articles.id %> ">Read More</a>
               <form class="d-inline" action="/articles/<%= articles.id %>?_method=DELETE " method="POST">
            <button type="submit" class="btn btn-danger">Delete</button>
            </form>
                </div>
                </div>
            <%}) %>
        </div>
    </body>
</html>